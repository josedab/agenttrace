# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENV=development
SERVER_CSRF_ENABLED=true
SERVER_SECURE_COOKIES=false

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agenttrace
POSTGRES_PASSWORD=agenttrace
POSTGRES_DB=agenttrace
# SSL Mode options: disable, allow, prefer, require, verify-ca, verify-full
# Use 'require' or 'verify-full' in production for encrypted connections
POSTGRES_SSL_MODE=prefer
POSTGRES_MAX_CONNS=25
POSTGRES_MIN_CONNS=5

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=agenttrace
CLICKHOUSE_PASSWORD=agenttrace
CLICKHOUSE_DB=agenttrace

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9002
MINIO_ACCESS_KEY=agenttrace
MINIO_SECRET_KEY=agenttrace123
MINIO_USE_SSL=false
MINIO_BUCKET=agenttrace-exports

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200
RATE_LIMIT_USER_MAX_PER_MINUTE=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_QUEUE_CRITICAL=critical
WORKER_QUEUE_DEFAULT=default
WORKER_QUEUE_LOW=low

# Cost Calculation
COST_WORKER_ENABLED=true
COST_WORKER_BATCH_SIZE=100

# Evaluation
EVAL_WORKER_ENABLED=true
EVAL_DEFAULT_MODEL=gpt-4o-mini
EVAL_API_KEY=

# Data Retention
RETENTION_DAYS=90
RETENTION_WORKER_ENABLED=true

# Sentry Error Tracking (optional)
SENTRY_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
SENTRY_DEBUG=false
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
