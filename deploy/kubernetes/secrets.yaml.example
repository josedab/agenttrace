# AgentTrace Secrets Configuration
#
# WARNING: This is an example file. Do NOT commit actual secrets to version control.
#
# Option 1: Use kubectl create secret (recommended)
#   kubectl create secret generic agenttrace-secrets \
#     --from-literal=postgres-password=$(openssl rand -base64 32) \
#     --from-literal=clickhouse-password=$(openssl rand -base64 32) \
#     --from-literal=redis-password=$(openssl rand -base64 32) \
#     --from-literal=jwt-secret=$(openssl rand -base64 32) \
#     --from-literal=encryption-key=$(openssl rand -hex 16) \
#     -n agenttrace
#
# Option 2: Use External Secrets Operator with your secrets manager
#   See README.md for External Secrets configuration
#
# Option 3: Fill in this template and apply (NOT recommended for production)
#   - Replace placeholders with base64-encoded values
#   - echo -n "your-password" | base64
---
apiVersion: v1
kind: Secret
metadata:
  name: agenttrace-secrets
  namespace: agenttrace
  labels:
    app.kubernetes.io/name: agenttrace
    app.kubernetes.io/component: secrets
type: Opaque
data:
  # Required secrets - replace with base64-encoded values
  # Generate: openssl rand -base64 32 | base64
  postgres-password: REPLACE_WITH_BASE64_ENCODED_PASSWORD
  clickhouse-password: REPLACE_WITH_BASE64_ENCODED_PASSWORD
  redis-password: REPLACE_WITH_BASE64_ENCODED_PASSWORD
  jwt-secret: REPLACE_WITH_BASE64_ENCODED_SECRET

  # Encryption key must be exactly 32 characters
  # Generate: openssl rand -hex 16 | base64
  encryption-key: REPLACE_WITH_BASE64_ENCODED_KEY

  # Optional secrets - remove or leave empty if not using
  # openai-api-key: REPLACE_WITH_BASE64_ENCODED_API_KEY
  # google-client-id: REPLACE_WITH_BASE64_ENCODED_ID
  # google-client-secret: REPLACE_WITH_BASE64_ENCODED_SECRET
  # github-client-id: REPLACE_WITH_BASE64_ENCODED_ID
  # github-client-secret: REPLACE_WITH_BASE64_ENCODED_SECRET
